"unlitgeneric"
{
	"$basetexture" "snowysnowtime/ho/shared/Screenline_d"
	"$decal" 	"1"
	"$additive" "1"

	"Proxies" 
	{
		"TextureScroll"
		{
			"texturescrollvar" "$basetexturetransform"
			"texturescrollrate" 0.35
		    "texturescrollangle" -270.00
			"texturescale"		0.7
		}
		drc_PlayerWeaponColours
		{
			resultVar	$color2
			default		1 1 1
		}
		Clamp 
		{
			min 0.1
			max 1
			srcVar1 "$color2"
			resultVar "$color2"
		}
	}
}